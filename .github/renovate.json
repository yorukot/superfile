{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "default:automergeDigest"],
  "packageRules": [
    {
      "matchDatasources": ["go", "github-releases", "github-tags"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "paths": ["/src"]
    }
  ]
}
